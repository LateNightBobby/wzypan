<!--        update file_info-->
<!--        set -->
<!--        where file_id in-->
<!--        <foreach collection="fileInfoList" item="item" index="index" open="(" separator="," close=")">-->
<!--            #{item.fileId}-->
<!--        </foreach>>-->
<!--    </update>-->
    
    <update id="updateDelFlagBatchIds" parameterType="com.wzypan.entity.po.FileInfo">
        update file_info
        <include refid="set_using_bean"/>
        where user_id = #{userId} and del_flag = #{oldDelFlag}
        <if test="fileIdList!=null">
            and file_id in <foreach collection="fileIdList" open="(" separator="," item="item" close=")">#{item}</foreach>
        </if>
        <if test="filePidList!=null">
            and file_pid in <foreach collection="filePidList" open="(" separator="," item="item" close=")">#{item}</foreach>
        </if>
    </update>

    <delete id="delFileBatchIds">
        delete from file_info
        where user_id = #{userId}
        <if test="fileIdList!=null">
            and file_id in <foreach collection="fileIdList" open="(" separator="," item="item" close=")">#{item}</foreach>
        </if>
        <if test="filePidList!=null">
            and file_pid in <foreach collection="filePidList" open="(" separator="," item="item" close=")">#{item}</foreach>
        </if>
        <if test="oldDelFlag!=null">
            and del_flag = #{oldDelFlag}
        </if>

    </delete>
</mapper>
